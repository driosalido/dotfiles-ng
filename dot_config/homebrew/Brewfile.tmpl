# Homebrew Bundle file
# This file is used by `brew bundle` to install packages
# https://github.com/Homebrew/homebrew-bundle

# Note: homebrew/bundle and homebrew/services taps were deprecated
# Core functionality is now built into brew itself

# Core tools
brew "coreutils"        # GNU core utilities (those that come with macOS are outdated)
brew "findutils"        # GNU find, locate, updatedb, and xargs
brew "gnu-sed"          # GNU sed
brew "gawk"             # GNU awk
brew "grep"             # GNU grep

# Essential CLI tools
brew "chezmoi"          # Dotfiles manager
brew "curl"             # Transfer data from or to a server
brew "wget"             # Internet file retriever
brew "git"              # Version control
brew "gh"               # GitHub CLI
brew "jq"               # Command-line JSON processor
brew "yq"               # Command-line YAML processor

# Modern replacements for traditional tools
brew "ripgrep"          # Fast grep replacement (rg)
brew "fd"               # Fast find replacement
brew "bat"              # Better cat with syntax highlighting
brew "eza"              # Better ls with colors and icons
brew "delta"            # Better git diff
brew "htop"             # Better top
brew "ncdu"             # NCurses disk usage

# Development tools
brew "neovim"           # Modern vim
brew "tmux"             # Terminal multiplexer
brew "fzf"              # Fuzzy finder - still the best!
brew "peco"             # Simplistic interactive filtering tool
brew "direnv"           # Directory-specific environment variables
brew "shellcheck"       # Shell script linter
brew "zoxide"           # Smarter cd command (autojump replacement)
# Note: skim was removed as it's not available in homebrew
# Note: autojump commented out - zoxide is the modern replacement

{{- if .is_personal }}
# Personal tools
brew "yt-dlp"           # Download videos (maintained youtube-dl fork)
brew "ffmpeg"           # Media converter
brew "imagemagick"      # Image manipulation
{{- end }}

{{- if .use_secrets }}
# Security tools
# 1Password CLI - using cask as the formula was deprecated
cask "1password-cli"    # 1Password CLI (op command)
{{- end }}

# Cloud tools
# Google Cloud SDK - now installed via cask
cask "google-cloud-sdk" # Google Cloud CLI (gcloud command)

# Platform-specific tools
{{- if .is_macos }}
# macOS specific tools
brew "mas"              # Mac App Store CLI
brew "trash"            # Move files to trash instead of rm
brew "duti"             # Set default applications for file types

# Casks (GUI applications)
{{- if .is_personal }}
cask "visual-studio-code"
cask "docker"
cask "firefox"
cask "spotify"
cask "discord"
{{- end }}

{{- if .is_corporate }}
cask "slack"
cask "zoom"
cask "microsoft-teams"
{{- end }}
{{- end }}

{{- if .is_linux }}
# Linux-specific tools
brew "gcc"              # GNU Compiler Collection (often needed for building)
brew "util-linux"       # Linux utilities
brew "procps"           # Process utilities (ps, top, etc.)

# Note: GUI applications on Linux should be installed via native package manager
# Homebrew on Linux focuses on CLI tools and development dependencies
{{- end }}